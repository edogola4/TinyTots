{
  "name": "tinytots-server",
  "version": "1.0.0",
  "description": "Backend for TinyTots application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix ../client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test": "jest --watchAll --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:coverage": "jest --coverage",
    "test:silent": "jest --silent"
  },
  "keywords": [
    "node",
    "express",
    "mongodb",
    "rest",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.0",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.5",
    "slugify": "^1.6.5",
    "validator": "^13.9.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "concurrently": "^7.6.0",
    "cookie-parser": "^1.4.7",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "jest": "^29.5.0",
    "jest-watch-typeahead": "^2.2.2",
    "mongodb-memory-server": "^7.3.0",
    "morgan": "^1.10.1",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3",
    "xss-clean": "^0.1.4"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
